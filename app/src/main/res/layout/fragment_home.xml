<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="homeFragViewModel"
            type="com.kohuyn.together.ui.home.homefrag.HomeFragViewModel" />
    </data>
   <RelativeLayout
       android:id="@+id/container_home"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:clickable="true"
       android:focusable="true"
       android:background="@drawable/bg">
       <androidx.appcompat.widget.AppCompatImageView
           android:id="@+id/img_background"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:src="@drawable/couple_splash"
           android:scaleType="centerCrop"/>
       <View
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:background="@color/clr_black"
           android:alpha="0.3"
           />
       <androidx.viewpager.widget.ViewPager
           android:id="@+id/pager_home"
           android:layout_width="match_parent"
           android:layout_height="match_parent">

       </androidx.viewpager.widget.ViewPager>

       <RelativeLayout
           android:layout_marginTop="@dimen/_30sdp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <androidx.appcompat.widget.AppCompatImageView
               android:id="@+id/btn_setting"
               android:layout_centerVertical="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:padding="@dimen/_15sdp"
               android:layout_marginStart="@dimen/_10sdp"
               android:src="@drawable/ic_setting"
               android:onClick="@{()->homeFragViewModel.openSetting()}"/>
           <LinearLayout
               android:layout_centerInParent="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <TextView
                   android:id="@+id/txt_count"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/str_count"
                   android:textStyle="bold"
                   android:layout_gravity="center"
                   android:textSize="20sp"
                   android:drawableBottom="@drawable/ic_dot"
                   android:textColor="@color/clr_white"
                   style="@style/TextAppearance.Text.Bold"
                   android:padding="@dimen/_10sdp"
                   android:onClick="@{()->homeFragViewModel.openCount()}"/>
               <TextView
                   android:id="@+id/txt_memories"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/str_memories"
                   android:textColor="@color/clr_date"
                   android:layout_gravity="center"
                   android:padding="@dimen/_10sdp"
                   android:onClick="@{()->homeFragViewModel.openMemories()}"/>
           </LinearLayout>
       </RelativeLayout>
   </RelativeLayout>
</layout>